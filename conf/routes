module:testrunner
# module:jobs


GET     /                                       Monitor.Index
POST    /monitor                                Monitor.AddiLO
GET     /monitor/overview/:id                   Monitor.Overview
GET     /monitor/fans/:id                       Monitor.Fans
GET     /monitor/powers/:id                     Monitor.Powers
GET     /monitor/temperatures/:id               Monitor.Temperatures
